PORT=4000
MONGODB_URI=mongodb://127.0.0.1:27017/airtable-form-builder
JWT_SECRET=dev_jwt_secret_change_me
CLIENT_BASE_URL=http://localhost:5173

# Airtable OAuth (get values from your Airtable developer app)
AIRTABLE_CLIENT_ID=your_airtable_client_id
AIRTABLE_CLIENT_SECRET=your_airtable_client_secret

# URLs must match the ones configured in Airtable
AIRTABLE_REDIRECT_URI=http://localhost:4000/auth/airtable/callback
AIRTABLE_API_BASE_URL=https://api.airtable.com/v0
AIRTABLE_OAUTH_AUTHORIZE_URL=https://airtable.com/oauth2/v1/authorize
AIRTABLE_OAUTH_TOKEN_URL=https://airtable.com/oauth2/v1/token

# Webhook verification token that Airtable sends back in headers
AIRTABLE_WEBHOOK_VERIFICATION_TOKEN=replace_me


